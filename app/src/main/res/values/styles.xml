<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/defaultHeaderHeight</item>
        <item name="android:background">@drawable/tab_back</item>
    </style>

    <style name = "ButtonLayout_STYLE01">
        <item name = "android:layout_height">50dp</item>
        <item name = "android:orientation">horizontal</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:gravity">center</item>
        <item name = "android:background">@drawable/ripple_rect</item>
    </style>

    <style name = "ButtonLayout_STYLE02">
        <item name = "android:layout_height">60dp</item>
        <item name = "android:orientation">horizontal</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:gravity">center</item>
    </style>

    <!--Leftside Textview-->
    <style name = "TEXTVIEW_STYLE01">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:textSize">20dp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:paddingLeft">20dp</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_gravity">center_vertical</item>
        <item name = "android:gravity">center_vertical</item>
    </style>
    <!--Rightside Textview-->
    <style name = "TEXTVIEW_STYLE02">
        <item name = "android:textSize">18dp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:gravity">center_vertical</item>
        <item name = "android:layout_weight">0</item>
    </style>

    <!--TextView Button-->
    <style name = "TextViewButton_STYLE01">
        <item name = "android:textSize">15dp</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:background">@color/black</item>
        <item name = "android:layout_height">@dimen/default_text_black_bt</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_weight">0</item>
    </style>


    <style name = "IMAGEVIEW_01">
        <item name = "android:layout_weight">@dimen/LIconsize</item>
        <item name = "android:layout_width">@dimen/LIconsize</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:padding">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <!--Sub_page Textview-->
    <style name = "Sub_TEXTVIEW_STYLE1">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:textSize">14dp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:paddingLeft">20dp</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:layout_gravity">center_vertical</item>
        <item name = "android:gravity">center_vertical</item>
    </style>

    <style name = "Sub_TEXTVIEW_STYLE2">
        <item name = "android:textSize">14dp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:gravity">center_vertical</item>
        <item name = "android:layout_weight">0</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name = "Sub_TEXTVIEW_STYLE3">
        <item name = "android:textSize">14dp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:gravity">center_vertical</item>
        <item name = "android:layout_weight">0</item>
    </style>

    <!--position_data Textview-->
    <style name = "position_data_TEXTVIEW_STYLE1">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:textSize">14dp</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:layout_height">40dp</item>
        <item name = "android:layout_gravity">center</item>
        <item name = "android:gravity">center</item>
        <item name = "android:paddingTop">5dp</item>
        <item name = "android:paddingBottom">5dp</item>
    </style>


</resources>