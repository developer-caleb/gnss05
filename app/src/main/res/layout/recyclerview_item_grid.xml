<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/main_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="3"
            app:layout_constraintBottom_toTopOf="@+id/info_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/info_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:autoText="false"
            android:fontFamily="@font/noto_sans_cj_kkr_bold"
            android:gravity="center|center_horizontal|top"
            android:lineSpacingExtra="-5dp"
            android:text="원추형\n편경사측설"
            android:textColor="@color/dark_gray"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:autoText="false"
            android:fontFamily="@font/noto_sans_cj_kkr_bold"
            android:gravity="center"
            android:lineSpacingExtra="-5dp"
            android:text="원추형"
            android:textColor="@color/dark_gray"
            android:textSize="19dp"
            app:layout_constraintBottom_toTopOf="@+id/info_text2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>