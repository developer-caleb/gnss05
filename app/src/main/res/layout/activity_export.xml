                    <TextView
                        style="@style/Sub_TEXTVIEW_STYLE1"
                        android:text="도로 횡단면 출력"
                         />


                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="8dp"
