<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
<shape
    android:shape="rectangle" >
    <corners
        android:radius="18dp" />
    <size
        android:width="32dp"
        android:height="18dp"/>
    <solid
        android:color="@color/grey_dd" />
</shape>
    </item>
    <item  android:right="10dp"
        android:gravity="center_vertical|right"
        android:width="8dp"
        android:height="8dp"
        >
        <shape
            android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/>

        </shape>
    </item>

</layer-list>